{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "6147807399171819946"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Deployment location"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "defaultValue": "asp-alm-chatbot-prod-weu",
      "metadata": {
        "description": "App Service Plan name"
      }
    },
    "webAppName": {
      "type": "string",
      "defaultValue": "alm-chatbot-prod-app-test",
      "metadata": {
        "description": "Web App name (must be globally unique)"
      }
    },
    "skuName": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": [
        "B1",
        "B2",
        "B3"
      ],
      "metadata": {
        "description": "App Service Plan SKU"
      }
    },
    "subnetId": {
      "type": "string",
      "metadata": {
        "description": "Subnet resource ID for App Service VNet Integration (existing)"
      }
    },
    "startupCommand": {
      "type": "string",
      "defaultValue": "gunicorn -w 1 -k uvicorn.workers.UvicornWorker -b 0.0.0.0:8000 main:app",
      "metadata": {
        "description": "Startup command for Python (FastAPI)"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-01-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "kind": "linux",
      "sku": {
        "name": "[parameters('skuName')]",
        "tier": "Basic",
        "capacity": 1
      },
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-01-01",
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "httpsOnly": true,
        "virtualNetworkSubnetId": "[parameters('subnetId')]",
        "siteConfig": {
          "linuxFxVersion": "PYTHON|3.12",
          "appCommandLine": "[parameters('startupCommand')]"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
      ]
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2023-01-01",
      "name": "[format('{0}/{1}', parameters('webAppName'), 'appsettings')]",
      "properties": {
        "WEBSITES_RUN_FROM_PACKAGE": "1"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
      ]
    }
  ],
  "outputs": {
    "webAppNameOut": {
      "type": "string",
      "value": "[parameters('webAppName')]"
    },
    "webAppHostName": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('webAppName')), '2023-01-01').defaultHostName]"
    },
    "webAppPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('webAppName')), '2023-01-01', 'full').identity.principalId]"
    },
    "appServicePlanId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
    }
  }
}